---
interface Props {
  text?: string;
}

const { text = "SCROLL TO EXPLORE" } = Astro.props;
---

<div class="scroll-indicator">
  <p class="scroll-text">{text}</p>
  <div class="mouse-icon">
    <div class="mouse-wheel"></div>
  </div>
  <div class="scroll-arrows">
    <span></span>
    <span></span>
    <span></span>
  </div>
</div>

<style>
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .scroll-text {
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 4px;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    animation: pulseText 2s ease-in-out infinite;
  }

  .mouse-icon {
    width: 24px;
    height: 40px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    position: relative;
  }

  .mouse-wheel {
    width: 3px;
    height: 8px;
    background: var(--highlight-color, #00f5ff);
    box-shadow: 0 0 10px var(--highlight-color, #00f5ff);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollMouse 1.5s ease-in-out infinite;
  }

  .scroll-arrows {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .scroll-arrows span {
    display: block;
    width: 8px;
    height: 8px;
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    border-right: 2px solid rgba(255, 255, 255, 0.3);
    transform: rotate(45deg);
    animation: fadeArrow 1.5s infinite;
  }

  .scroll-arrows span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .scroll-arrows span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes scrollMouse {
    0% { transform: translate(-50%, 0); opacity: 0; }
    30% { opacity: 1; }
    70% { transform: translate(-50%, 15px); opacity: 0; }
    100% { transform: translate(-50%, 0); opacity: 0; }
  }

  @keyframes pulseText {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 0.7; color: #fff; }
  }

  @keyframes fadeArrow {
    0% { opacity: 0; transform: rotate(45deg) translate(-5px, -5px); }
    50% { opacity: 1; }
    100% { opacity: 0; transform: rotate(45deg) translate(5px, 5px); }
  }
</style>
