---
interface Props {
  text?: string;
}

const { text = "SCROLL TO EXPLORE" } = Astro.props;
---

<div class="scroll-indicator">
  <div class="mega-scroll-container">
    <div class="hologram-ring"></div>
    <div class="mouse-icon">
      <div class="mouse-wheel"></div>
    </div>
    <div class="scroll-arrows">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <p class="scroll-text">{text}</p>
</div>

<style>
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    margin-top: 4rem;
    position: relative;
    z-index: 10;
  }

  .mega-scroll-container {
    position: relative;
    width: 200px;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hologram-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(0, 245, 255, 0.1);
    border-radius: 50%;
    background: radial-gradient(circle, rgba(0, 245, 255, 0.05) 0%, transparent 70%);
    animation: rotateHologram 10s linear infinite;
    box-shadow: 0 0 30px rgba(0, 245, 255, 0.1) inset;
  }

  .hologram-ring::after {
    content: '';
    position: absolute;
    top: -5px;
    left: 50%;
    width: 10px;
    height: 10px;
    background: var(--highlight-color);
    border-radius: 50%;
    box-shadow: 0 0 15px var(--highlight-color);
  }

  .mouse-icon {
    width: 48px;
    height: 80px;
    border: 3px solid rgba(255, 255, 255, 0.2);
    border-radius: 24px;
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(5px);
    z-index: 2;
    box-shadow: 0 0 20px rgba(0, 245, 255, 0.1);
  }

  .mouse-wheel {
    width: 6px;
    height: 14px;
    background: var(--highlight-color);
    box-shadow: 0 0 12px var(--highlight-color), 0 0 24px var(--highlight-color);
    border-radius: 3px;
    position: absolute;
    top: 15px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollMouse 1.8s cubic-bezier(0.19, 1, 0.22, 1) infinite;
  }

  .scroll-arrows {
    position: absolute;
    bottom: -60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .scroll-arrows span {
    display: block;
    width: 15px;
    height: 15px;
    border-bottom: 3px solid var(--highlight-color);
    border-right: 3px solid var(--highlight-color);
    transform: rotate(45deg);
    opacity: 0.3;
    animation: fadeArrow 1.8s infinite;
    filter: drop-shadow(0 0 8px var(--highlight-color));
  }

  .scroll-arrows span:nth-child(2) { animation-delay: 0.3s; }
  .scroll-arrows span:nth-child(3) { animation-delay: 0.6s; }

  .scroll-text {
    font-size: 1rem;
    font-weight: 800;
    letter-spacing: 6px;
    color: rgba(255, 255, 255, 0.3);
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
    text-transform: uppercase;
    animation: pulseText 2.5s ease-in-out infinite;
  }

  @keyframes rotateHologram {
    from { transform: rotate(0deg) scale(1); }
    50% { transform: rotate(180deg) scale(1.1); }
    to { transform: rotate(360deg) scale(1); }
  }

  @keyframes scrollMouse {
    0% { transform: translate(-50%, 0); opacity: 0; }
    20% { opacity: 1; }
    80% { transform: translate(-50%, 35px); opacity: 0; }
    100% { transform: translate(-50%, 0); opacity: 0; }
  }

  @keyframes pulseText {
    0%, 100% { opacity: 0.3; transform: scale(0.98); }
    50% { opacity: 0.8; color: #fff; transform: scale(1.02); }
  }

  @keyframes fadeArrow {
    0% { opacity: 0; transform: rotate(45deg) translate(-10px, -10px); }
    50% { opacity: 1; }
    100% { opacity: 0; transform: rotate(45deg) translate(10px, 10px); }
  }
</style>
