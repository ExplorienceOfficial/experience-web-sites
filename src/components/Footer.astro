---
export interface Props {
  lang: string;
  t: Record<string, any>;
}

const { lang, t } = Astro.props;
---

<footer class="modern-footer snap-section">
  <div class="footer-content">
    <div class="footer-brand">
      <a href={`/${lang}/`} class="logo" aria-label="Explorience">
        Explorience<span class="highlight">.</span>
      </a>
      <p>{t.footer.catchphrase}</p>
    </div>

    <nav class="footer-links" aria-label="Footer navigation">
      <a href={`/${lang}/`}>{t.footer.home}</a>
      <a href={`/${lang}/#sec-solutions`}>{t.footer.solutions}</a>
      <a href={`/${lang}/#sec-contact`}>{t.footer.contact}</a>
    </nav>

    <div class="footer-social">
      <a href="#" class="social-link" aria-label="Instagram">Instagram</a>
      <a href="#" class="social-link" aria-label="LinkedIn">LinkedIn</a>
      <a href="#" class="social-link" aria-label="Twitter / X">Twitter</a>
    </div>
  </div>

  <div class="footer-bottom">
    <p>{t.footer.rights}</p>
  </div>
</footer>
