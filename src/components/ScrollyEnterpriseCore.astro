---
// ScrollyEnterpriseCore.astro - A massive cinematic 3D Enterprise/ERP Cube
---
<div class="enterprise-vault-canvas">
  <div class="vault-cluster">
    <!-- Main Core Vault -->
    <div class="vault-main" id="enterprise-main-vault">
      <div class="v-face v-front"></div>
      <div class="v-face v-back"></div>
      <div class="v-face v-right"></div>
      <div class="v-face v-left"></div>
      <div class="v-face v-top"></div>
      <div class="v-face v-bottom"></div>
      
      <!-- Central Data Core -->
      <div class="v-core" id="enterprise-inner-core"></div>
    </div>
    
    <!-- Outer Satellite Modules -->
    <div class="v-sat vs1" id="enterprise-sat-1"></div>
    <div class="v-sat vs2" id="enterprise-sat-2"></div>
    <div class="v-sat vs3" id="enterprise-sat-3"></div>
  </div>
</div>

<style>
  .enterprise-vault-canvas {
    width: 600px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 2500px;
  }

  .vault-cluster {
    position: relative;
    width: 250px;
    height: 250px;
    transform-style: preserve-3d;
  }

  /* Main hardware vault */
  .vault-main {
    position: absolute;
    width: 100%; height: 100%;
    transform-style: preserve-3d;
  }

  .v-face {
    position: absolute;
    width: 250px;
    height: 250px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(0, 245, 255, 0.05));
    border: 3px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(8px);
    border-radius: 4px;
    box-shadow: inset 0 0 40px rgba(0, 245, 255, 0.1);
  }

  .v-front  { transform: translateZ(125px); border-color: rgba(0, 245, 255, 0.4); }
  .v-back   { transform: rotateY(180deg) translateZ(125px); }
  .v-right  { transform: rotateY(90deg) translateZ(125px); }
  .v-left   { transform: rotateY(-90deg) translateZ(125px); }
  .v-top    { transform: rotateX(90deg) translateZ(125px); }
  .v-bottom { transform: rotateX(-90deg) translateZ(125px); }

  .v-core {
    position: absolute;
    top: 50%; left: 50%;
    width: 100px; height: 100px;
    margin: -50px;
    background: var(--highlight-color);
    box-shadow: 0 0 120px var(--highlight-color), 0 0 240px var(--highlight-color);
    border-radius: 12px;
    transform: translateZ(0);
    z-index: -1;
  }

  .v-sat {
    position: absolute;
    width: 60px; height: 60px;
    background: rgba(255, 255, 255, 0.03);
    border: 2px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border-radius: 10px;
    transform-style: preserve-3d;
  }

  .vs1 { transform: translate3d(240px, -100px, 150px); }
  .vs2 { transform: translate3d(-240px, 80px, -100px); }
  .vs3 { transform: translate3d(50px, 200px, -200px); }

  /* Interactive Pulse */
  @keyframes vaultGlow {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }
</style>
