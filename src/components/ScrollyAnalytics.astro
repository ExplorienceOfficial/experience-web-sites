---
// ScrollyAnalytics.astro - Cinematic 3D Data Visualization / Analytics
---
<div class="analytics-terminal-canvas">
  <div class="data-terminal">
    <!-- Solid Hardware Base -->
    <div class="terminal-base">
      <div class="base-face b-top"></div>
      <div class="base-face b-front"></div>
    </div>
    
    <!-- Growing Bars -->
    <div class="bars-cluster">
      <div class="h-bar hb1"></div>
      <div class="h-bar hb2"></div>
      <div class="h-bar hb3"></div>
      <div class="h-bar hb4"></div>
      <div class="h-bar hb5"></div>
    </div>
    
    <!-- Holographic Control Panel -->
    <div class="holo-panel"></div>
  </div>
</div>

<style>
  .analytics-terminal-canvas {
    width: 600px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 2500px;
  }

  .data-terminal {
    position: relative;
    width: 300px;
    height: 300px;
    transform-style: preserve-3d;
  }

  .terminal-base {
    position: absolute;
    bottom: 0;
    width: 300px;
    height: 40px;
    transform-style: preserve-3d;
  }

  .base-face {
    position: absolute;
    background: #1a1a1a;
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .b-top { width: 300px; height: 100px; transform: rotateX(-90deg) translateZ(50px); background: #222; }
  .b-front { width: 300px; height: 40px; transform: translateZ(50px); }

  .h-bar {
    position: absolute;
    bottom: 40px;
    width: 40px;
    background: linear-gradient(to top, var(--highlight-color), transparent);
    border: 1px solid var(--highlight-color);
    box-shadow: 0 0 20px var(--highlight-color);
    transform-style: preserve-3d;
    transform-origin: bottom;
    transition: height 0.3s ease;
  }

  .hb1 { left: 20px;  height: 120px; transform: translateZ(20px); }
  .hb2 { left: 80px;  height: 180px; transform: translateZ(-10px); }
  .hb3 { left: 140px; height: 140px; transform: translateZ(40px); }
  .hb4 { left: 200px; height: 220px; transform: translateZ(10px); }
  .hb5 { left: 260px; height: 160px; transform: translateZ(-20px); }

  .holo-panel {
    position: absolute;
    top: 20px;
    left: 50%;
    width: 200px;
    height: 100px;
    margin-left: -100px;
    background: rgba(0, 245, 255, 0.05);
    border: 1px solid rgba(0, 245, 255, 0.3);
    backdrop-filter: blur(4px);
    transform: rotateX(-20deg) translateZ(80px);
    box-shadow: 0 0 30px rgba(0, 245, 255, 0.1);
  }
</style>
