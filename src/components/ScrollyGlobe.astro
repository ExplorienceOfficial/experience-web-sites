---
// 3D Wireframe Sphere
---
<div class="globe-3d">
   <div class="globe-core"></div>
   <!-- Longitude & Latitude Rings -->
   <div id="globe-rings" style="position: absolute; inset:0; transform-style: preserve-3d; transition: transform 0.1s linear;">
       <div class="latitude lat1"></div>
       <div class="latitude lat2"></div>
       <div class="latitude lat3"></div>
       
       <div class="longitude lon1"></div>
       <div class="longitude lon2"></div>
       <div class="longitude lon3"></div>
       <div class="longitude lon4"></div>
   </div>

   <div class="connection-nodes" id="globe-nodes" style="transition: transform 0.1s linear;">
       <div class="node n1"></div>
       <div class="node n2"></div>
       <div class="node n3"></div>
       <div class="node n4"></div>
   </div>
</div>

<style>
/* ========================================
   3. GLOBE (Pure CSS Hologram Sphere)
   ======================================== */
.globe-3d {
   width: 350px; height: 350px;
   position: relative;
   transform-style: preserve-3d;
   animation: spin-globe 25s linear infinite;
}
.globe-core {
   position: absolute; top: 10%; left: 10%; width: 80%; height: 80%;
   background: radial-gradient(circle, rgba(59,130,246,0.3) 0%, transparent 70%);
   border-radius: 50%;
   box-shadow: 0 0 100px rgba(59,130,246,0.4);
   transform: translateZ(0); /* Anchor to center */
}

/* Wireframes */
.latitude, .longitude {
   position: absolute; top: 0; left: 0; width: 100%; height: 100%;
   border: 1px solid rgba(59, 130, 246, 0.4);
   border-radius: 50%;
   transform-style: preserve-3d;
}
.lat1 { transform: rotateX(30deg); }
.lat2 { transform: rotateX(90deg); border-width: 2px; border-color: rgba(59, 130, 246, 0.8); }
.lat3 { transform: rotateX(150deg); }

.lon1 { transform: rotateY(0deg); border-width: 2px; border-color: rgba(59, 130, 246, 0.8); }
.lon2 { transform: rotateY(45deg); }
.lon3 { transform: rotateY(90deg); border-width: 2px; }
.lon4 { transform: rotateY(135deg); }

.connection-nodes { position: absolute; inset: 0; transform-style: preserve-3d; }
.node {
   position: absolute; width: 15px; height: 15px; background: #fff; border-radius: 50%;
   box-shadow: 0 0 20px 5px #fff, 0 0 40px 10px #3b82f6;
}
.n1 { top: 20%; left: 30%; transform: translateZ(150px); }
.n2 { top: 60%; left: 70%; transform: translateZ(-120px); }
.n3 { top: 80%; left: 40%; transform: translateZ(100px); }
.n4 { top: 40%; left: 80%; transform: translateZ(50px); }

@keyframes spin-globe { 100% { transform: rotateY(360deg) rotateX(15deg); } }
</style>
