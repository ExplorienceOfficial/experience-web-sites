---
// Premium Quantum AI Processor
---
<div class="ai-chip-3d">
   <!-- Base Motherboard / Substrate -->
   <div class="chip-substrate">
       <div class="circuit-grid"></div>
       <!-- Glowing traces -->
       <div class="trace t-1"></div>
       <div class="trace t-2"></div>
       <div class="trace t-3"></div>
       <div class="trace t-4"></div>
       <div class="mount m-1"></div><div class="mount m-2"></div><div class="mount m-3"></div><div class="mount m-4"></div>
   </div>
   
   <!-- CPU Die / Glass Core (Jumps out on scroll) -->
   <div class="chip-core" id="ai-scroll-core">
       <!-- Top Glass Face -->
       <div class="chip-face top-face">
           <div class="core-circuit">
               <div class="c-node"></div><div class="c-node"></div><div class="c-node"></div><div class="c-node"></div>
           </div>
           <div class="chip-label">QUANTUM AI</div>
           <div class="core-shimmer"></div>
       </div>
       <!-- Edge Faces for 3D volume (Thickness of the Glass Chip) -->
       <div class="chip-face front-face"></div>
       <div class="chip-face back-face"></div>
       <div class="chip-face left-face"></div>
       <div class="chip-face right-face"></div>
       <div class="chip-face bottom-face"></div>
   </div>

   <!-- Floating Holographic Data Rings (Expand on scroll) -->
   <div class="hologram-layers" id="ai-scroll-rings">
       <div class="holo-layer layer-1"></div>
       <div class="holo-layer layer-2"></div>
       <div class="holo-layer layer-3"></div>
   </div>
   
   <div id="ai-scroll-orb" class="ambient-glow"></div>
</div>

<style>
/* ========================================
   1. AI CORE (Premium Quantum AI Chip)
   ======================================== */
.ai-chip-3d {
   width: 280px; height: 280px;
   position: relative;
   transform-style: preserve-3d;
   display: flex; align-items: center; justify-content: center;
   animation: float-chip 6s ease-in-out infinite alternate;
}

.ambient-glow {
   position: absolute; top: 50%; left: 50%; width: 150%; height: 150%;
   transform: translate(-50%, -50%) translateZ(-40px);
   background: radial-gradient(circle, rgba(168, 85, 247, 0.4) 0%, rgba(6, 182, 212, 0.2) 40%, transparent 70%);
   border-radius: 50%; filter: blur(30px);
   pointer-events: none;
}

/* Substrate (Motherboard Base) */
.chip-substrate {
   position: absolute; width: 280px; height: 280px;
   background: #0f172a; border: 2px solid #334155;
   border-radius: 20px;
   transform-style: preserve-3d;
   box-shadow: 0 20px 50px rgba(0,0,0,0.8), inset 0 0 30px rgba(0,0,0,0.9);
   overflow: hidden;
}

/* Geometric Circuit Print */
.circuit-grid {
   position: absolute; inset: 0;
   background-image: 
      linear-gradient(rgba(168, 85, 247, 0.15) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.15) 1px, transparent 1px);
   background-size: 20px 20px;
   opacity: 0.8;
}

/* Glowing Traces (Circuit Lines) */
.trace {
   position: absolute; background: #06b6d4;
   box-shadow: 0 0 10px #06b6d4, 0 0 20px #a855f7;
   border-radius: 2px;
}
.t-1 { width: 100px; height: 2px; top: 40px; left: 0; animation: trace-pulse 2s infinite; }
.t-2 { width: 2px; height: 100px; bottom: 0; right: 40px; animation: trace-pulse 2.5s infinite 0.5s; }
.t-3 { width: 80px; height: 2px; bottom: 60px; left: 0; animation: trace-pulse 3s infinite 1s; }
.t-4 { width: 2px; height: 80px; top: 0; left: 60px; animation: trace-pulse 1.8s infinite 0.2s; }

/* Corner Mounts */
.mount { position: absolute; width: 12px; height: 12px; border-radius: 50%; border: 2px solid #475569; background: #1e293b; box-shadow: inset 0 2px 4px rgba(0,0,0,0.5); }
.m-1 { top: 10px; left: 10px; } .m-2 { top: 10px; right: 10px; }
.m-3 { bottom: 10px; left: 10px; } .m-4 { bottom: 10px; right: 10px; }

/* 3D Glass Brain Core (CPU Die) */
.chip-core {
   position: absolute; top: 50%; left: 50%;
   width: 130px; height: 130px;
   transform-style: preserve-3d;
   transform: translate(-50%, -50%) translateZ(25px); 
}

/* Box Extrusion for the Die */
.chip-face { position: absolute; border: 1px solid rgba(255,255,255,0.2); box-shadow: inset 0 0 10px rgba(0,0,0,0.5); }
.top-face {
   width: 130px; height: 130px;
   background: linear-gradient(135deg, rgba(168,85,247,0.3), rgba(6,182,212,0.3));
   backdrop-filter: blur(15px);
   border-radius: 12px;
   transform: translateZ(12.5px);
   display: flex; flex-direction: column; align-items: center; justify-content: center;
   box-shadow: inset 0 0 20px rgba(255,255,255,0.2), 0 0 40px rgba(168,85,247,0.5);
   overflow: hidden;
}
.bottom-face {
   width: 130px; height: 130px; background: #020617;
   transform: translateZ(-12.5px); border-radius: 12px;
   box-shadow: 0 0 30px rgba(0,0,0,0.9);
}
.front-face, .back-face { width: 130px; height: 25px; background: rgba(15,23,42,0.85); backdrop-filter: blur(5px); }
.left-face, .right-face { width: 25px; height: 130px; background: rgba(15,23,42,0.85); backdrop-filter: blur(5px); }

.front-face { transform: rotateX(-90deg) translateZ(12.5px) translateY(65px); bottom: 0; }
.back-face  { transform: rotateX(90deg) translateZ(12.5px) translateY(-65px); top: 0; }
.left-face  { transform: rotateY(-90deg) translateZ(12.5px) translateX(-65px); left: 0; }
.right-face { transform: rotateY(90deg) translateZ(12.5px) translateX(65px); right: 0; }

.core-circuit {
   position: absolute; inset: 10px; border: 1px dashed rgba(6,182,212,0.5);
   border-radius: 8px; display: grid; grid-template-columns: 1fr 1fr; gap: 10px; padding: 10px;
}
.c-node { background: rgba(255,255,255,0.8); border-radius: 50%; width: 6px; height: 6px; box-shadow: 0 0 10px #fff; animation: node-blink 1s infinite alternate; }
.c-node:nth-child(2) { animation-delay: 0.2s; }
.c-node:nth-child(3) { animation-delay: 0.4s; }

.chip-label {
   color: #fff; font-family: monospace; font-size: 15px; font-weight: bold;
   letter-spacing: 2px; z-index: 10;
   text-shadow: 0 0 10px #06b6d4;
}

.core-shimmer {
   position: absolute; top: -50%; left: -50%; width: 200%; height: 200%;
   background: linear-gradient(45deg, transparent 40%, rgba(255,255,255,0.3) 50%, transparent 60%);
   animation: core-sweep 3s infinite linear;
   pointer-events: none;
}

/* Holographic Floating Rings */
.hologram-layers {
   position: absolute; top: 0; left: 0; width: 100%; height: 100%;
   transform-style: preserve-3d;
   pointer-events: none;
}
.holo-layer {
   position: absolute; top: 50%; left: 50%;
   border-radius: 50%; transform-style: preserve-3d;
   border: 2px dashed rgba(6, 182, 212, 0.4);
   box-shadow: 0 0 20px rgba(6, 182, 212, 0.1), inset 0 0 20px rgba(168, 85, 247, 0.1);
}
.layer-1 { width: 180px; height: 180px; margin: -90px 0 0 -90px; transform: translateZ(50px); border-color: rgba(168, 85, 247, 0.6); animation: holo-spin-1 12s linear infinite; }
.layer-2 { width: 220px; height: 220px; margin: -110px 0 0 -110px; transform: translateZ(80px); border: 1px solid rgba(6, 182, 212, 0.4); border-top: 3px solid #06b6d4; animation: holo-spin-2 8s linear infinite reverse; }
.layer-3 { width: 260px; height: 260px; margin: -130px 0 0 -130px; transform: translateZ(110px); border: 2px dotted rgba(255, 255, 255, 0.3); animation: holo-spin-3 20s linear infinite; }

@keyframes holo-spin-1 { 100% { transform: translateZ(50px) rotateZ(360deg); } }
@keyframes holo-spin-2 { 100% { transform: translateZ(80px) rotateZ(360deg); } }
@keyframes holo-spin-3 { 100% { transform: translateZ(110px) rotateZ(360deg); } }
@keyframes float-chip { 0% { transform: translateY(-10px); } 100% { transform: translateY(10px); } }
@keyframes trace-pulse { 0%, 100% { opacity: 0.1; } 50% { opacity: 1; } }
@keyframes core-sweep { 0% { transform: translate(-30%, -30%) rotate(45deg); } 100% { transform: translate(30%, 30%) rotate(45deg); } }
@keyframes node-blink { 100% { opacity: 0.2; transform: scale(0.5); } }
</style>
