---
// Photorealistic 3D Quantum AI Chip Mockup
---
<div class="quantum-ai-3d">

   <!-- Base Motherboard / Socket -->
   <div class="socket-base">
      <div class="socket-edge top"></div>
      <div class="socket-edge bottom"></div>
      <div class="socket-edge left"></div>
      <div class="socket-edge right"></div>
      <div class="socket-grid">
         <div class="pin-grid"></div>
      </div>
   </div>

   <!-- Copper Heat Pipes -->
   <div class="heat-pipes">
       <div class="pipe p1"></div>
       <div class="pipe p2"></div>
       <div class="pipe p3"></div>
       <div class="pipe p4"></div>
   </div>

   <!-- The Main AI CPU Core -->
   <div class="ai-chip" id="ai-scroll-core">
       <div class="chip-glass">
          <div class="glare"></div>
       </div>
       <div class="chip-inner">
           <svg width="60" height="60" viewBox="0 0 24 24" fill="none" class="chip-brain">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="#00f5ff" stroke-width="2" stroke-linejoin="round"/>
           </svg>
       </div>
       <!-- Glowing Nodes -->
       <div class="chip-led led-top"></div>
       <div class="chip-led led-bottom"></div>
       <div class="chip-led led-left"></div>
       <div class="chip-led led-right"></div>
   </div>

   <!-- Holographic Display Rings (Active on Scroll/Hover) -->
   <div class="hologram-rings" id="ai-scroll-rings">
      <div class="holo-ring hr1"></div>
      <div class="holo-ring hr2"></div>
      <div class="holo-ring hr3"></div>
   </div>
   
   <div class="energy-orb" id="ai-scroll-orb"></div>
</div>

<style>
/* ========================================
   PREMIUM 3D QUANTUM AI CHIP
   ======================================== */
.quantum-ai-3d {
   width: 300px; height: 300px;
   position: relative; transform-style: preserve-3d;
   cursor: pointer;
}

/* Base Socket Extrusions */
.socket-base {
   position: absolute; inset: 0; transform: translateZ(-10px);
   background: #18181b; border-radius: 20px;
   box-shadow: 0 40px 60px rgba(0,0,0,0.8), inset 0 0 40px rgba(0,0,0,1);
   border: 2px solid #3f3f46; transform-style: preserve-3d;
   display: flex; align-items: center; justify-content: center;
}
.socket-grid {
   width: 90%; height: 90%; background: #09090b; border-radius: 10px;
   border: 1px solid #27272a; box-shadow: inset 0 0 20px #000;
   display: flex; align-items: center; justify-content: center; overflow: hidden;
}
.pin-grid {
   width: 100%; height: 100%;
   background-image: 
      radial-gradient(#a1a1aa 15%, transparent 20%),
      radial-gradient(#a1a1aa 15%, transparent 20%);
   background-color: transparent;
   background-position: 0 0, 8px 8px;
   background-size: 16px 16px;
   opacity: 0.15;
}

/* Socket Metallic Edges */
.socket-edge { position: absolute; background: #27272a; box-shadow: inset 0 0 10px rgba(0,0,0,0.8); }
.socket-edge.top { width: 296px; height: 15px; top: -7.5px; left: 0; transform: rotateX(90deg); }
.socket-edge.bottom { width: 296px; height: 15px; bottom: -7.5px; left: 0; transform: rotateX(-90deg); }
.socket-edge.left { width: 15px; height: 296px; left: -7.5px; top: 0; transform: rotateY(-90deg); }
.socket-edge.right { width: 15px; height: 296px; right: -7.5px; top: 0; transform: rotateY(90deg); }

/* Heat Pipes */
.heat-pipes {
   position: absolute; inset: 0; transform-style: preserve-3d; pointer-events: none;
}
.pipe {
   position: absolute; background: linear-gradient(90deg, #b45309, #f59e0b, #b45309);
   box-shadow: inset 0 0 5px rgba(0,0,0,0.8), 0 5px 10px rgba(0,0,0,0.5);
   border-radius: 8px; transform: translateZ(5px);
}
.p1 { top: 40px; left: -20px; width: 340px; height: 16px; }
.p2 { bottom: 40px; left: -20px; width: 340px; height: 16px; }
.p3 { left: 40px; top: -20px; height: 340px; width: 16px; background: linear-gradient(0deg, #b45309, #f59e0b, #b45309); }
.p4 { right: 40px; top: -20px; height: 340px; width: 16px; background: linear-gradient(0deg, #b45309, #f59e0b, #b45309); }


/* The Main Processor Core */
.ai-chip {
   position: absolute; top: 50%; left: 50%;
   width: 140px; height: 140px; transform: translate(-50%, -50%) translateZ(25px);
   background: linear-gradient(135deg, #1e1e24, #121214);
   border: 2px solid #52525b; border-radius: 20px;
   box-shadow: 0 15px 30px rgba(0,0,0,0.8), inset 0 0 20px rgba(0,245,255,0.1);
   display: flex; align-items: center; justify-content: center;
   transform-style: preserve-3d; transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}
.quantum-ai-3d:hover .ai-chip { transform: translate(-50%, -50%) translateZ(60px) rotateZ(45deg); border-color: #00f5ff; box-shadow: 0 20px 50px rgba(0,245,255,0.4), inset 0 0 40px rgba(0,245,255,0.4); }

/* Glass Dome within chip */
.chip-glass {
   position: absolute; inset: 10px; background: rgba(0,0,0,0.5); border-radius: 12px;
   border: 1px solid rgba(255,255,255,0.1); overflow: hidden; transform: translateZ(10px);
   box-shadow: inset 0 0 20px #000;
}
.glare {
   position: absolute; top: -50%; left: -50%; width: 200%; height: 200%;
   background: linear-gradient(135deg, rgba(255,255,255,0.15) 0%, transparent 40%);
}

.chip-inner {
   position: relative; z-index: 10; transform: translateZ(15px);
   filter: drop-shadow(0 0 10px #00f5ff); transition: all 0.4s;
}
.quantum-ai-3d:hover .chip-inner { filter: drop-shadow(0 0 20px #00f5ff) drop-shadow(0 0 40px #00f5ff); transform: translateZ(25px) scale(1.2) rotateZ(-45deg); }


/* Glowing Chip Connectors */
.chip-led { position: absolute; width: 6px; height: 6px; border-radius: 50%; background: #00f5ff; opacity: 0.3; }
.led-top { top: -3px; left: 50%; transform: translateX(-50%); }
.led-bottom { bottom: -3px; left: 50%; transform: translateX(-50%); }
.led-left { left: -3px; top: 50%; transform: translateY(-50%); }
.led-right { right: -3px; top: 50%; transform: translateY(-50%); }
.quantum-ai-3d:hover .chip-led { opacity: 1; box-shadow: 0 0 10px #00f5ff; }


/* Holographic Rings that project out from the CPU */
.hologram-rings {
   position: absolute; top: 50%; left: 50%; width: 200px; height: 200px;
   transform: translate(-50%, -50%); transform-style: preserve-3d;
   pointer-events: none; opacity: 0; transition: all 0.6s;
}
.quantum-ai-3d:hover .hologram-rings { opacity: 1; }

.holo-ring {
   position: absolute; left: 50%; top: 50%; margin: -50% 0 0 -50%;
   width: 100%; height: 100%; border-radius: 50%; border: 2px dashed rgba(0, 245, 255, 0.6);
   transform-style: preserve-3d;
}
.hr1 { border-style: dotted; animation: rh-spin 4s linear infinite; transform: translateZ(80px); }
.hr2 { width: 140%; height: 140%; margin: -70% 0 0 -70%; border-width: 1px; animation: rh-spin 8s linear infinite reverse; transform: translateZ(40px); }
.hr3 { width: 180%; height: 180%; margin: -90% 0 0 -90%; border-color: rgba(59, 130, 246, 0.4); border-style: solid; box-shadow: 0 0 30px rgba(0,245,255,0.2), inset 0 0 30px rgba(0,245,255,0.2); transform: translateZ(100px); animation: rh-spin 12s linear infinite; }

/* The Energy Orb */
.energy-orb {
   position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%) translateZ(40px);
   width: 100px; height: 100px; border-radius: 50%;
   background: radial-gradient(circle, rgba(0,245,255,0.5) 0%, transparent 60%);
   filter: blur(20px); opacity: 0; pointer-events: none; transition: opacity 0.5s;
}
.quantum-ai-3d:hover .energy-orb { opacity: 1; animation: throb 2s infinite alternate; }

@keyframes rh-spin { 100% { transform: translateZ(var(--tz, 50px)) rotateZ(360deg); } }
.hr1 { --tz: 80px; } .hr2 { --tz: 40px; } .hr3 { --tz: 100px; }
@keyframes throb { 0% { transform: translate(-50%, -50%) translateZ(40px) scale(0.8); opacity: 0.6; } 100% { transform: translate(-50%, -50%) translateZ(40px) scale(1.4); opacity: 1; } }

</style>
