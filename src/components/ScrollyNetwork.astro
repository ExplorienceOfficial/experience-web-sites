---
// ScrollyNetwork.astro - Cinematic 3D Network Nodes / API Systems
---
<div class="network-canvas">
  <div class="network-mesh">
    <!-- 8 Interconnected Nodes -->
    <div class="node n1"><div class="label">AUTH.</div></div>
    <div class="node n2"><div class="label">DATA.</div></div>
    <div class="node n3"><div class="label">API.</div></div>
    <div class="node n4"><div class="label">CLOUD.</div></div>
    <div class="node n5"><div class="label">SEC.</div></div>
    <div class="node n6"><div class="label">USER.</div></div>
    <div class="node n7"><div class="label">PAY.</div></div>
    <div class="node n8"><div class="label">DB.</div></div>
    
    <!-- Central Power Source -->
    <div class="power-core"></div>
    
    <!-- Connection Rays -->
    <div class="ray horizontal"></div>
    <div class="ray vertical"></div>
    <div class="ray diagonal-1"></div>
    <div class="ray diagonal-2"></div>
  </div>
</div>

<style>
  .network-canvas {
    width: 600px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 2500px;
  }

  .network-mesh {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    animation: rotateNetwork 25s linear infinite;
  }

  .node {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 0 15px #fff, 0 0 30px var(--highlight-color);
    transform-style: preserve-3d;
  }

  .label {
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%) rotateY(0deg);
    font-size: 0.7rem;
    font-weight: 800;
    color: var(--highlight-color);
    white-space: nowrap;
    letter-spacing: 1px;
    opacity: 0.6;
    animation: labelFlip 25s linear infinite reverse;
  }

  /* Position nodes in 3D grid */
  .n1 { transform: translate3d(150px, 150px, 150px); }
  .n2 { transform: translate3d(-150px, 150px, 150px); }
  .n3 { transform: translate3d(150px, -150px, 150px); }
  .n4 { transform: translate3d(-150px, -150px, 150px); }
  .n5 { transform: translate3d(150px, 150px, -150px); }
  .n6 { transform: translate3d(-150px, 150px, -150px); }
  .n7 { transform: translate3d(150px, -150px, -150px); }
  .n8 { transform: translate3d(-150px, -150px, -150px); }

  .power-core {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 60px;
    height: 60px;
    margin: -30px;
    background: radial-gradient(circle, #fff 0%, var(--highlight-color) 40%, transparent 80%);
    box-shadow: 0 0 80px var(--highlight-color);
    border-radius: 50%;
    animation: pulseCore 2s ease-in-out infinite;
  }

  /* Connecting Rays (Simplified 3D lines) */
  .ray {
    position: absolute;
    top: 50%;
    left: 50%;
    background: linear-gradient(to right, transparent, rgba(0, 245, 255, 0.4), transparent);
    height: 2px;
    width: 400px;
    margin-left: -200px;
    transform-style: preserve-3d;
    box-shadow: 0 0 15px rgba(0, 245, 255, 0.2);
  }

  .horizontal { transform: rotateY(0deg); }
  .vertical { transform: rotateY(90deg); }
  .diagonal-1 { transform: rotateY(45deg); }
  .diagonal-2 { transform: rotateY(-45deg); }

  @keyframes rotateNetwork {
    from { transform: rotateX(20deg) rotateY(0deg); }
    to { transform: rotateX(20deg) rotateY(360deg); }
  }

  @keyframes pulseCore {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.3); opacity: 1; }
  }

  @keyframes labelFlip {
    from { transform: translateX(-50%) rotateY(0deg); }
    to { transform: translateX(-50%) rotateY(-360deg); }
  }
</style>
