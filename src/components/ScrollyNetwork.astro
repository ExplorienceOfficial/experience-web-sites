---
// ScrollyNetwork.astro - Cinematic 3D Network Nodes / API Systems
---
<div class="satellite-canvas">
  <div class="satellite-hub">
    <!-- Main Body -->
    <div class="sat-body">
      <div class="s-face s-front"></div>
      <div class="s-face s-back"></div>
      <div class="s-face s-right"></div>
      <div class="s-face s-left"></div>
    </div>
    
    <!-- Dish -->
    <div class="sat-dish"></div>
    <div class="sat-transmitter"></div>
    
    <!-- Solar Panels -->
    <div class="solar-panel sp-left"></div>
    <div class="solar-panel sp-right"></div>
    
    <!-- Orbiting signals -->
    <div class="signal s1"></div>
    <div class="signal s2"></div>
  </div>
</div>

<style>
  .satellite-canvas {
    width: 600px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 2500px;
  }

  .satellite-hub {
    position: relative;
    width: 150px;
    height: 150px;
    transform-style: preserve-3d;
  }

  .sat-body {
    position: absolute;
    width: 80px; height: 120px;
    top: 50%; left: 50%;
    margin-left: -40px; margin-top: -60px;
    transform-style: preserve-3d;
    background: #333;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .s-face { position: absolute; width: 80px; height: 120px; background: #222; border: 1px solid rgba(255, 255, 255, 0.1); }
  .s-front { transform: translateZ(40px); }
  .s-back  { transform: rotateY(180deg) translateZ(40px); }
  .s-right { width: 80px; transform: rotateY(90deg) translateZ(40px); }
  .s-left  { width: 80px; transform: rotateY(-90deg) translateZ(40px); }

  .sat-dish {
    position: absolute;
    top: -80px; left: 50%;
    width: 140px; height: 140px;
    margin-left: -70px;
    background: radial-gradient(circle, #444, #111);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50% 50% 10% 10%;
    transform: rotateX(45deg) translateZ(20px);
    box-shadow: 0 0 30px rgba(0, 245, 255, 0.1);
  }

  .sat-transmitter {
    position: absolute;
    top: -100px; left: 50%;
    width: 10px; height: 40px;
    margin-left: -5px;
    background: var(--highlight-color);
    box-shadow: 0 0 20px var(--highlight-color);
    transform: translateZ(60px);
  }

  .solar-panel {
    position: absolute;
    top: 50%;
    width: 180px; height: 80px;
    margin-top: -40px;
    background: linear-gradient(90deg, #1a3a5a, #0d1a2a);
    border: 1px solid rgba(0, 245, 255, 0.3);
    background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  .sp-left { right: 80px; transform: rotateY(-20deg); }
  .sp-right { left: 80px; transform: rotateY(20deg); }

  .signal {
    position: absolute;
    width: 8px; height: 8px;
    background: var(--highlight-color);
    border-radius: 50%;
    box-shadow: 0 0 15px var(--highlight-color);
  }

  .s1 { animation: orbitX 4s linear infinite; }
  .s2 { animation: orbitY 6s linear infinite; }

  @keyframes orbitX {
    from { transform: rotateY(0deg) translateX(250px); }
    to { transform: rotateY(360deg) translateX(250px); }
  }
</style>
