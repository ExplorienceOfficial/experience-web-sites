---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import ScrollyGlobe from '../components/ScrollyGlobe.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  lang={lang}
  title={t.error404.title}
  description={t.error404.message}
  canonicalPath="/404"
>
  <main class="error-page">
    <div class="error-bg-elements">
        <div class="glow-sphere"></div>
    </div>

    <div class="error-content">
        <div class="error-visual">
            <div class="globe-container">
                <ScrollyGlobe />
            </div>
            <div class="error-code">404</div>
        </div>
        
        <div class="error-text">
            <h1>{t.error404.title}</h1>
            <p>{t.error404.message}</p>
            
            <div class="actions">
                <a href={`/${lang}/`} class="btn-primary">
                    <span class="btn-bg"></span>
                    <span class="btn-text">{t.error404.btn}</span>
                </a>
            </div>
        </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-page {
    position: relative;
    width: 100%;
    height: 100vh;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: #fff;
    font-family: 'Outfit', sans-serif;
  }

  .error-bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .glow-sphere {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
    filter: blur(50px);
  }

  .error-content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 1200px;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 60px;
  }

  .error-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .globe-container {
    transform: scale(1.4);
    opacity: 0.8;
  }

  .error-code {
    position: absolute;
    font-size: 15rem;
    font-weight: 900;
    opacity: 0.05;
    letter-spacing: -1rem;
    pointer-events: none;
    user-select: none;
    z-index: -1;
  }

  .error-text h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    background: linear-gradient(to right, #fff, rgba(255,255,255,0.4));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .error-text p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 450px;
  }

  /* Premium Button */
  .btn-primary {
    position: relative;
    display: inline-flex;
    padding: 18px 45px;
    text-decoration: none;
    overflow: hidden;
    border-radius: 4px;
    transition: transform 0.3s cubic-bezier(0.2, 1, 0.3, 1);
  }

  .btn-bg {
    position: absolute;
    inset: 0;
    background: #fff;
    transform: scaleX(1);
    transform-origin: right;
    transition: transform 0.45s cubic-bezier(0.85, 0, 0.15, 1);
  }

  .btn-text {
    position: relative;
    z-index: 1;
    color: #000;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.9rem;
    transition: color 0.45s ease;
  }

  .btn-primary:hover {
    transform: scale(1.05);
  }

  .btn-primary:hover .btn-bg {
    transform: scaleX(0);
    transform-origin: left;
  }

  .btn-primary:hover .btn-text {
    color: #fff;
  }

  .btn-primary::after {
    content: '';
    position: absolute;
    inset: 0;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }

  @media (max-width: 968px) {
    .error-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 40px;
    }
    
    .error-text p {
      margin: 0 auto 40px;
    }
    
    .error-code {
      font-size: 10rem;
    }
    
    .globe-container {
      transform: scale(1.1);
    }
  }
</style>
